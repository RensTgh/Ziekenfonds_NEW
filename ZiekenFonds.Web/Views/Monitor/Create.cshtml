@model ZiekenFonds.Web.DTOS.Monitor.CreateMonitorDTO

@{
    ViewData["Title"] = "Nieuwe Monitor Aanmaken";
}

<div class="container mt-5">
    <h1 class="text-center">Nieuwe Monitor Aanmaken</h1>
    <form asp-action="CreateAsync" method="post" class="mt-4">
        <div class="form-group">
            <label for="PersoonId">Persoon ID</label>
            <input type="text" class="form-control" id="PersoonId" name="PersoonId" required />
            <span asp-validation-for="PersoonId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="GroepsreisId">Groepsreis ID</label>
            <input type="number" class="form-control" id="GroepsreisId" name="GroepsreisId" required />
            <span asp-validation-for="GroepsreisId" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="IsHoofdMonitor" name="IsHoofdMonitor" />
            <label class="form-check-label" for="IsHoofdMonitor">Hoofdmonitor</label>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Aanmaken</button>
    </form>
</div>
