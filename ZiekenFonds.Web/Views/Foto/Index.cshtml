@model IEnumerable<ZiekenFonds.Web.DTOS.Foto.GetFotoDto>

<h2>Foto's voor Bestemming @ViewBag.BestemmingId</h2>

<a asp-action="Upload" asp-route-bestemmingId="@ViewBag.BestemmingId" class="btn btn-primary">Upload Nieuwe Foto</a>

<table class="table mt-4">
    <thead>
        <tr>
            <th>#</th>
            <th>Afbeelding</th>
            <th>Naam</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var foto in Model)
            {
                <tr>
                    <td>@foto.Id</td>
                    <td>
                        <img src="/uploads/@foto.Naam" alt="@foto.Naam" style="max-width: 150px;" />
                    </td>
                    <td>@foto.Naam</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@foto.Id" asp-route-bestemmingId="@ViewBag.BestemmingId" method="post">
                            <button type="submit" class="btn btn-danger">Verwijderen</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Geen foto's gevonden of de gegevens zijn niet geladen.</td>
            </tr>
        }
    </tbody>
</table>
